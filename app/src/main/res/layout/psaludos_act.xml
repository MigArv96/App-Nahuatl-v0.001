<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/saludos_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8CD83"
    android:fitsSystemWindows="true"
    android:textAlignment="center"
    tools:openDrawer="start"
    tools:context=".Saludos">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu_principal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_saludos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/menu"
                app:title="@string/str_toolbartitle">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_gravity="end"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/strLogoNavbar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/logo65" />
                </FrameLayout>


            </androidx.appcompat.widget.Toolbar>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="668dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_saludos">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTituloTabla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_span="4"
                        android:gravity="center_horizontal"
                        android:text="@string/str_TabSaludosyColores"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnYektunal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="#00EC9276"
                        android:contentDescription="@string/CDbtnA"
                        app:srcCompat="@drawable/buenos_dias" />

                    <ImageButton
                        android:id="@+id/btnTiutak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="@string/CDbtnCH"
                        app:srcCompat="@drawable/buenas_tardes"
                        tools:ignore="ImageContrastCheck" />

                    <ImageButton
                        android:id="@+id/btnTayua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="@string/CDbtnE"
                        app:srcCompat="@drawable/buenas_noches"
                        tools:ignore="ImageContrastCheck" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnTaysan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00EC9276"
                        android:contentDescription="@string/CDbtnA"
                        app:srcCompat="@drawable/hola" />

                    <ImageButton
                        android:id="@+id/btnPeyna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="@string/CDbtnCH"
                        app:srcCompat="@drawable/amanecer"
                        tools:ignore="ImageContrastCheck" />
                    <ImageButton
                        android:id="@+id/btnAzul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="@string/CDbtnCH"
                        app:srcCompat="@drawable/azul"
                        tools:ignore="ImageContrastCheck" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnRojo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00EC9276"
                        android:contentDescription="@string/CDbtnA"
                        app:srcCompat="@drawable/rojo" />

                    <ImageButton
                        android:id="@+id/btnAmarillo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="@string/CDbtnCH"
                        app:srcCompat="@drawable/amarillo"
                        tools:ignore="ImageContrastCheck" />
                    <ImageButton
                        android:id="@+id/btnVerde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="@string/CDbtnCH"
                        app:srcCompat="@drawable/verde"
                        tools:ignore="ImageContrastCheck" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btnNaranja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00EC9276"
                        android:contentDescription="@string/CDbtnA"
                        app:srcCompat="@drawable/naranja" />

                    <ImageButton
                        android:id="@+id/btnBlanco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="@string/CDbtnCH"
                        app:srcCompat="@drawable/blanco"
                        tools:ignore="ImageContrastCheck" />
                    <ImageButton
                        android:id="@+id/btnNegro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="@string/CDbtnCH"
                        app:srcCompat="@drawable/negro"
                        tools:ignore="ImageContrastCheck" />
                </TableRow>
            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>